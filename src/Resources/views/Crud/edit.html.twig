{% extends 'backend/layout.html.twig' %}

{% import '@SyliusUi/Macro/headers.html.twig' as headers %}

{% block title %}{{ 'lwc.settings.ui.settings.title'|trans }} {{ parent() }}{% endblock %}

{% form_theme form '@LwcSettings/Form/theme.html.twig' %}

{% block content %}

    <div class="ui stackable two column grid">
        <div class="column">
            <h1 class="ui header">
                <i class="circular {{ settings.icon }} icon"></i>
                <div class="content">
                    {{ 'lwc.settings.ui.settings_of.title'|trans({'%pluginName%': settings.pluginName}) }}
                    <div class="sub header">{{ settings.description }}</div>
                </div>
            </h1>
        </div>
        <div class="middle aligned column">
            <div class="ui right floated buttons">
                {{ sylius_template_event([settings.alias ~ '.settings.admin.update.actions', 'lwc.settings.admin.update.actions'], _context) }}
            </div>
        </div>
    </div>

    {{ sylius_template_event('lwc.settings.admin.update', _context) }}

{% endblock %}
